* {
	bg0: #4E3F87;
	fg0: #B8B8F0;

    background-color: @bg0;
    text-color:       @fg0;
    font:             "Hack Nerd Font Mono 12";
}

#window {
    width:    380px;
    y-offset: 0%;
    padding:  30px;

	border-color: #B8B8F0;
    border: 2px;
    border-radius: 5px;
}


#entry {
    /* For some reason, without this option, a dash/hyphen appears at the end of the entry */
    expand: true;

    /* Keeping using 200px so that long passwords can be typed */
    width: 200px;
}
