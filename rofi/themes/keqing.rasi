/* ROFI SQUARED THEME USING THE NORD PALETTE  */
/* Author: Newman Sanchez (https://github.com/newmanls) */

* {
	bg0: #1A132F;
	bg1: #2A1B45;
	fg0: #D9D1E5;

	accent: #8E7CC3;
	urgent: #E09EFF;

    font: "Hack Nerd Font Mono Medium 12";

    background-color: transparent;
	text-color: @fg0;

    margin:  0;
    padding: 0;
    spacing: 0;
}

window {
    background-color: @bg0;

	border-color: #8E7CC3;
    border: 2px;
    border-radius: 5px;

    width: 500;

    location: center;
    anchor:   center;
}

inputbar {
    spacing: 8px;
    padding: 15 12 15 12;

    background-color: @bg1;
}

prompt, entry, element-icon, element-text {
    vertical-align: 0.5;
}

prompt {
    text-color: @accent;
}

textbox {
    padding: 8px;
    background-color: @bg1;
}

listview {
    padding: 0;
    columns: 1;
	lines: 8;

    fixed-height: false;
}

element {
    spacing: 8px;
	padding: 12;
}

element normal normal {
    text-color: @fg0;
}

element normal urgent {
    text-color: @urgent;
}

element normal active {
    text-color: @accent;
}

element alternate active {
    text-color: @accent;
}

element selected {
    text-color: @bg0;
}

element selected normal, element selected active {
    background-color: @accent;
}

element selected urgent {
    background-color: @urgent;
}

element-icon {
    size: 0.8em;
}

element-text {
    text-color: inherit;
}
